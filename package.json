{
    "name": "rss",
    "displayName": "RSS",
    "description": "A RSS reader embedded in Visual Studio Code",
    "license": "MIT",
    "icon": "logo.png",
    "version": "0.4.0",
    "publisher": "luyuhuang",
    "author": "luyuhuang",
    "homepage": "https://github.com/luyuhuang/vscode-rss.git",
    "repository": {
        "type": "git",
        "url": "https://github.com/luyuhuang/vscode-rss.git"
    },
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "news",
        "rss",
        "feed",
        "reader"
    ],
    "activationEvents": [
        "onView:rss-feeds",
        "onView:rss-articles"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "rss",
            "properties": {
                "rss.accounts": {
                    "type": "object",
                    "default": {},
                    "description": "Feed accounts"
                },
                "rss.interval": {
                    "type": "integer",
                    "default": 3600,
                    "description": "Refresh interval(s)"
                },
                "rss.timeout": {
                    "type": "integer",
                    "default": 15,
                    "description": "Request timeout(s)"
                },
                "rss.retry": {
                    "type": "integer",
                    "default": 1,
                    "description": "Request retries"
                }
            }
        },
        "commands": [
            {
                "command": "rss.select",
                "title": "Select"
            },
            {
                "command": "rss.articles",
                "title": "Articles"
            },
            {
                "command": "rss.read",
                "title": "Read"
            },
            {
                "command": "rss.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "rss.refresh-account",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "rss.refresh-one",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "rss.open-website",
                "title": "Open website"
            },
            {
                "command": "rss.open-link",
                "title": "Open link"
            },
            {
                "command": "rss.set-read",
                "title": "Set as read"
            },
            {
                "command": "rss.set-unread",
                "title": "Set as unread"
            },
            {
                "command": "rss.set-all-read",
                "title": "Set all to read"
            },
            {
                "command": "rss.add-feed",
                "title": "Add feed",
                "icon": "$(add)"
            },
            {
                "command": "rss.remove-feed",
                "title": "Remove"
            },
            {
                "command": "rss.add-to-favorites",
                "title": "Add to favorites"
            },
            {
                "command": "rss.remove-from-favorites",
                "title": "Remove from favorites"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "rss-reader",
                    "title": "RSS Reader",
                    "icon": "resources/rss.svg"
                }
            ]
        },
        "views": {
            "rss-reader": [
                {
                    "id": "rss-accounts",
                    "name": "Accounts"
                },
                {
                    "id": "rss-feeds",
                    "name": "Feeds"
                },
                {
                    "id": "rss-articles",
                    "name": "Articles"
                },
                {
                    "id": "rss-favorites",
                    "name": "Favorites"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "rss.refresh",
                    "when": "view == rss-accounts",
                    "group": "navigation"
                },
                {
                    "command": "rss.refresh-account",
                    "when": "view == rss-feeds",
                    "group": "navigation"
                },
                {
                    "command": "rss.add-feed",
                    "when": "view == rss-feeds",
                    "group": "navigation"
                },
                {
                    "command": "rss.refresh-one",
                    "when": "view == rss-articles",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "rss.refresh-account",
                    "when": "view == rss-accounts"
                },
                {
                    "command": "rss.open-link",
                    "when": "viewItem == article"
                },
                {
                    "command": "rss.set-read",
                    "when": "view == rss-articles"
                },
                {
                    "command": "rss.set-unread",
                    "when": "view == rss-articles"
                },
                {
                    "command": "rss.add-to-favorites",
                    "when": "view == rss-articles"
                },
                {
                    "command": "rss.remove-from-favorites",
                    "when": "view == rss-favorites && viewItem == article"
                },
                {
                    "command": "rss.set-all-read",
                    "when": "view == rss-feeds"
                },
                {
                    "command": "rss.refresh-one",
                    "when": "view == rss-feeds"
                },
                {
                    "command": "rss.open-website",
                    "when": "view == rss-feeds"
                },
                {
                    "command": "rss.remove-feed",
                    "when": "view == rss-feeds"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/cheerio": "0.22.16",
        "@types/glob": "^7.1.1",
        "@types/he": "^1.1.0",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/sqlite3": "^3.1.6",
        "@types/uuid": "^7.0.3",
        "@types/vscode": "^1.40.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "cheerio": "1.0.0-rc.3",
        "fast-xml-parser": "^3.16.0",
        "got": "10.6.0",
        "he": "^1.2.0",
        "iconv-lite": "^0.5.1",
        "sqlite": "^4.0.7",
        "sqlite3": "^4.2.0",
        "uuid": "^8.0.0"
    }
}
