{
    "name": "rss",
    "displayName": "RSS",
    "description": "A RSS reader embedded in Visual Studio Code",
    "license": "MIT",
    "icon": "logo.png",
    "version": "0.1.0",
    "publisher": "luyuhuang",
    "author": "luyuhuang",
    "homepage": "https://github.com/luyuhuang/vscode-rss.git",
    "repository": {
        "type": "git",
        "url": "https://github.com/luyuhuang/vscode-rss.git"
    },
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "news",
        "rss",
        "feed",
        "reader"
    ],
    "activationEvents": [
        "onView:rss-feeds",
        "onView:rss-articles"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "rss",
            "properties": {
                "rss.feeds": {
                    "type": "array",
                    "default": [],
                    "description": "A list of feeds"
                },
                "rss.interval": {
                    "type": "integer",
                    "default": 3600,
                    "description": "Refresh interval(s)"
                },
                "rss.timeout": {
                    "type": "integer",
                    "default": 15,
                    "description": "Request timeout(s)"
                },
                "rss.retry": {
                    "type": "integer",
                    "default": 1,
                    "description": "Request retries"
                }
            }
        },
        "commands": [
            {
                "command": "rss.articles",
                "title": "Articles"
            },
            {
                "command": "rss.read",
                "title": "Read"
            },
            {
                "command": "rss.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "rss.refresh-one",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "rss.open-website",
                "title": "Open website"
            },
            {
                "command": "rss.open-link",
                "title": "Open link"
            },
            {
                "command": "rss.set-read",
                "title": "Set as read"
            },
            {
                "command": "rss.set-unread",
                "title": "Set as unread"
            },
            {
                "command": "rss.set-all-read",
                "title": "Set all to read"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "rss-reader",
                    "title": "RSS Reader",
                    "icon": "resources/rss.svg"
                }
            ]
        },
        "views": {
            "rss-reader": [
                {
                    "id": "rss-feeds",
                    "name": "Feeds"
                },
                {
                    "id": "rss-articles",
                    "name": "Articles"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "rss.refresh",
                    "when": "view == rss-feeds",
                    "group": "navigation"
                },
                {
                    "command": "rss.refresh-one",
                    "when": "view == rss-articles",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "rss.open-link",
                    "when": "view == rss-articles"
                },
                {
                    "command": "rss.set-read",
                    "when": "view == rss-articles"
                },
                {
                    "command": "rss.set-unread",
                    "when": "view == rss-articles"
                },
                {
                    "command": "rss.set-all-read",
                    "when": "view == rss-feeds"
                },
                {
                    "command": "rss.refresh-one",
                    "when": "view == rss-feeds"
                },
                {
                    "command": "rss.open-website",
                    "when": "view == rss-feeds"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.40.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/he": "^1.1.0",
        "@types/cheerio": "0.22.16",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.26.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "cheerio": "1.0.0-rc.3",
        "fast-xml-parser": "^3.16.0",
        "got": "10.6.0",
        "he": "^1.2.0"
    }
}
